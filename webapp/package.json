{
  "name": "card-collection",
  "private": true,
  "version": "1.0.0",

  "dependencies": {
    "angular2": "2.0.0-alpha.46",
    "systemjs": "0.19.6"
  },
  "devDependencies": {
    "karma": "^0.12.16",
    "karma-firefox-launcher": "^0.1.3",
    "karma-jasmine": "~0.1.0",
    "typescript": "latest"
  },
  "repository": {
    "type": "hg",
    "url": "https://bitbucket.org/Jorn86/card-collection-app"
  },
  "scripts": {
    "pretsc": "rm -r target",
    "tsc": "tsc -p src --outDir target/app",

    "prewar": "npm install && npm run tsc",
    "war": "jar cmf manifest.mf ROOT.war node_modules && cd src && jar uf ../ROOT.war * && cd ../target && jar uf ../ROOT.war *"
  }
}
