{
  "name": "card-collection",
  "private": true,
  "version": "0.0.0",

  "devDependencies": {
    "karma": "^0.12.16",
    "karma-chrome-launcher": "^0.1.4",
    "karma-firefox-launcher": "^0.1.3",
    "karma-jasmine": "~0.1.0"
  },
  "repository": {
    "type": "hg",
    "url": "https://bitbucket.org/Jorn86/card-collection-app"
  },
  "scripts": {
    "postinstall": "cd app && npm install",

    "pretest": "npm install",
    "test": "node node_modules/karma/bin/karma start test/karma.conf.js",
    "pretest-single-run": "npm install",
    "test-single-run": "node node_modules/karma/bin/karma start test/karma.conf.js  --single-run",

    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",

    "prewar": "npm run-script test-single-run",
    "war": "npm run-script quick-war",
    "quick-war": "jar cmf manifest.mf ROOT.war WEB-INF",
    "postquick-war": "cd app && npm run-script war"
  }
}
